{
    "name": "magic-touch",
    "version": "0.0.6",
    "type": "module",
    "description": "ネイティブっぽい挙動のタッチイベントを提供します。",
    "main": "src/index.js",
    "repository": "KasaParasol/magic-touch",
    "license": "MIT",
    "scripts": {
        "build:js-dev": "webpack --mode development",
        "build:js-demo": "webpack --env mode=demo",
        "lint": "xo",
        "test": "c8 -r html ava --verbose",
        "test:cui": "c8 ava --verbose"
    },
    "keywords": [
        "touchevent",
        "pointerevent",
        "ui"
    ],
    "author": "KasaParasol<yanase.takuma.oct@gmail.com>",
    "devDependencies": {
        "ava": "^5.1.0",
        "c8": "^7.12.0",
        "jsdom": "^21.0.0",
        "webpack": "^5.75.0",
        "webpack-cli": "^5.0.1",
        "xo": "^0.53.1"
    },
    "xo": {
        "env": "browser",
        "space": 4,
        "rules": {
            "no-extra-boolean-cast": "off",
            "no-negated-condition": "off",
            "import/extensions": "off",
            "import/no-anonymous-default-export": "off",
            "n/file-extension-in-import": "off",
            "brace-style": [
                "warn",
                "stroustrup"
            ],
            "comma-dangle": [
                "error",
                "always-multiline"
            ],
            "space-before-function-paren": [
                "error",
                "always"
            ],
            "unicorn/prevent-abbreviations": "off",
            "space-infix-ops": [
                "warn"
            ],
            "curly": [
                "warn"
            ],
            "no-bitwise": "off",
            "unicorn/prefer-number-properties": [
                "error",
                {
                    "checkInfinity": false
                }
            ],
            "unicorn/empty-brace-spaces": "off",
            "unicorn/no-nested-ternary": "off",
            "default-case": "off",
            "guard-for-in": "off",
            "no-implicit-coercion": "off",
            "unicorn/switch-case-braces": "off",
            "no-fallthrough": [
                "warn"
            ]
        },
        "ignores": [
            "/docs"
        ]
    }
}
